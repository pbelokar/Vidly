@model List<VidlyNew.Models.Movie>

@{
    ViewBag.Title = "Movies";
}

<h2>Movies</h2>

<a href="@Url.Action("Save", "Movies")" class="btn btn-primary"><i class="fa fa-plus"></i> New Movie</a>

<table id="movies" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Movie Name
            </th>
            <th>
                Genre
            </th>
            <th></th>
            
        </tr>
    </thead>
    <tbody></tbody>
</table>

@section scripts{
    <script>
        $(function () {
            var successMessage = '@TempData["SuccessMessage"]'
            if (successMessage != '')
                alertify.success(successMessage);
                      }
        );

        $(document).ready(

            function () {

              var table =   $('#movies').DataTable(
                    {
                        ajax: {
                            url: "/api/Movies",
                            dataSrc:""
                        },
                        columns: [
                            {
                                data: "name",
                                render: function (data, type, Movie) {

                                    return "<a href='/Movies/Details/" + Movie.id + "'> " + data + "</a>";
                                }

                            },
                            {
                                data: "genre.name"
                            },
                            {
                                data: "id",
                                render: function (data) {
                                    return "<a href='/Movies/Save/"+ data +"'> Edit</a>" +
                                        "<input type='button' value='Delete' movie-id='"+ data +"' class='btn-link js-delete'/>";
                                        
                                        

                                }
                                
                            }
                            
                        ]
                    }
                );

               $('#movies').on("click",".js-delete",
                    function () {
                        var button = $(this);
                        bootbox.confirm('Are you sure you want to delete this movie?',
                            function (result) {
                                if (result) {
                                    $.ajax(
                                        {
                                            url: "api/Movies/" + button.attr('movie-id'),
                                            method: "DELETE",
                                            success: function () {
                                                //button.parents("tr").remove();
                                                table.row(button.parents("tr")).remove().draw();
                                            }
                                        }
                                    );
                                    
                                }

                            }
                        );
                        

                    }
                );
                
            }
        );
    </script>
}
