@model List<VidlyNew.Models.Movie>

@{
    ViewBag.Title = "Movies";
}

<h2>Movies</h2>
@*@Html.ActionLink("New Movie", "Save", new { Controller = "Movies"}, new { @class = "btn btn-primary"} )*@
<a href="@Url.Action("Save", "Movies")" class="btn btn-primary"><i class="fa fa-plus"></i> New Movie</a>

@if (!Model.Any())
{
    <p>No Movies added yet</p>
}
else
{

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th>
                    Movie Name
                </th>
                <th>
                    Genre
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(movie.Name, "Details", new { Id = movie.Id })
                    </td>
                    <td>@movie.Genre.Name</td>
                    <td>
                        <a href="@Url.Action("Save", "Movies", new { Id = movie.Id })" class="btn btn-default"><i class="fa fa-pencil"></i> Edit</a>
                        @*@Html.ActionLink("Edit", "Save", new { Id = movie.Id })*@
                    </td>

                </tr>
            }
        </tbody>
    </table>

}
@section scripts{
    <script>
        $(function () {
            var successMessage = '@TempData["SuccessMessage"]'
            if (successMessage != '')
                alertify.success(successMessage);
                      }
    );
    </script>
}
